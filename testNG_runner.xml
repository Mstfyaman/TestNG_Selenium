<test name="Krafttech Smoke Test">
    <classes>
        <class name="com.krafttechnologie.tests.day18_ExtentReports.PositiveTest">
            <methods>
               <exclude name="loginTest1"></exclude>
            </methods>
        </class>
    </classes>
</test>
</suite>